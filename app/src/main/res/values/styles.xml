<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="get_your_gr">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#030303</item>
        <item name="fontFamily">@font/gilda_display</item>
    </style>

    <style name="enter_your_">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#181725</item>

    </style>

    <style name="mobile_numb">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#7C7C7C</item>
    </style>

    <style name="select_your">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#8E8CA2</item>
    </style>

    <style name="textTheme">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/filledBlack</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="bigTextTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#201E1E</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="exclusive_o">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#181725</item>
    </style>

    <style name="product_show_title">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/filledBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gilda_display</item>
        <item name="android:layout_marginTop">@dimen/_1sdp</item>

    </style>

    <style name="product_show_title.smallTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>


    </style>


    <style name="product_show_subTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:fontFamily">@font/gilda_display</item>

    </style>

    <style name="product_show_line">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/lightWhite</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
    </style>

    <style name="product_show_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/right_arrow</item>

    </style>

</resources>